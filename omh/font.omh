$mindex font type size$$
$mindex fixed code italic bold big small$$

$section Specifying Fonts$$

$table

$bold Syntax$$
$cnext

$table
$syntax/@fixed /text/@@/$$  $cnext $syntax/@code /text/@@/$$ $rnext
$syntax/@italic /text/@@/$$ $cnext $syntax/@bold /text/@@/$$ $rnext
$syntax/@big /text/@@/$$    $cnext $syntax/@small /text/@@/$$
$tend

$rnext
$bold See Also$$
$cnext	$xref/start_font//getting started/$$,
	$xref/special/$$,
