if [ "$1" != "Doc" ] && [ "$1" != "Developer" ]
then
	echo "RunOMhelp target: where target is Doc or Developer"
	exit
fi
if [ "$1" = Developer ]
then
	rm -r -f Developer
	#
	echo "Building developer documentation"
	mkdir Developer
	cd    Developer
	../src/omhelp ../src/omh/omhelp.omh > ../RunOMhelp.log \
		-debug -omhelp_dir ../OMhelp
	cd ..
fi
if [ "$1" = Doc ]
then
	#
	rm -r -f Doc
	echo "Building user documentation"
	#
	mkdir Doc
	cd    Doc
	../src/omhelp ../omh/overview.omh > ../RunOMhelp.log \
		-xml -debug -omhelp_dir ../OMhelp
	../src/omhelp ../omh/overview.omh  -debug -omhelp_dir ../OMhelp
	cd ..
fi
grep "Latex error"                 RunOMhelp.log
grep "Spelling error:"             RunOMhelp.log
grep "Cross reference error"       RunOMhelp.log
grep "OMhelp error in file"        RunOMhelp.log
grep "Error occurred in or before" RunOMhelp.log
grep "Cross reference destination defined at line" RunOMhelp.log
