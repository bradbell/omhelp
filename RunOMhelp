if [ "$1" != "Doc" ] && [ "$1" != "Developer" ]
then
	echo "RunOMhelp target: where target is Doc or Developer"
	exit 1
fi
if [ "$1" = Developer ]
then
	echo "Building developer documentation"
	if [ -e Developer ]
	then
		rm -r -f Developer
	fi
	mkdir Developer
	cd    Developer
	../src/omhelp ../src/omh/omhelp.omh > ../RunOMhelp.log \
		-debug -omhelp_dir ../OMhelp
	cd ..
fi
if [ "$1" = Doc ]
then
	echo "Building user documentation"
	if [ -e Doc ]
	then
		rm -r -f Doc
	fi
	mkdir Doc
	cd    Doc
	../src/omhelp ../omh/overview.omh > ../RunOMhelp.log \
		-xml -debug -omhelp_dir ../OMhelp
	../src/omhelp ../omh/overview.omh  -debug -omhelp_dir ../OMhelp
	cd ..
fi
status=0
if grep "Latex error"                 RunOMhelp.log ; then status=1 ; fi
if grep "Spelling error:"             RunOMhelp.log ; then status=1 ; fi
if grep "Cross reference error"       RunOMhelp.log ; then status=1 ; fi
if grep "OMhelp error in file"        RunOMhelp.log ; then status=1 ; fi
if grep "Error occurred in or before" RunOMhelp.log ; then status=1 ; fi
if grep "Cross reference destination" RunOMhelp.log ; then status=1 ; fi
#
exit $status
