grep '^# *include *"' src/*.c src/*.h |\
sed -e 's/^[^"]*"//' -e 's/" *$//' -e '/string.h/d' |\
sort -u > junk.1
#
ls src/*.h |\
sed -e 's/src\///' |\
sort -u > junk.2
#
echo "Differences between include file names and directives"
echo "-----------------------------------------------------"
diff junk.1 junk.2
echo "-----------------------------------------------------"
echo "Nothing should be between the two dashed lines above"
