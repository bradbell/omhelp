# Deprecate the fend command and fix single quote in Javascript strings.
#
# CvsCommit: file that made this commit.
# whatsnew.omh: users view of changes.
# CleanOMhelp: remove htm directories.
# deprecated.omh: group the deprecated commands here.
# FrameExample.omh: remove fend getstarted example.
# StartFrame.omh: remove fend getstarted example.
# cross_childtable.omh: move xref.omh include from here to deprecated.omh.
# fend.omh: add mentiond of deprecation.
# format_children.omh: move fend.omh include from here to deprecated.omh.
# getstarted.omh: remove fend getstarted example.
# other.omh: add deprecated.omh to list of children.
# special.omh: move wspace.omh include from here to deprecated.omh
# whatsnew03.omh: remove cross reference to fend example.
# ImageExample.omh: remove use of fend command.
# relative.c: properly escape the single quote character when inside a string.
# tref.omh: use cref instead of xref for examples.
# href.omh: use cref instead of xref for examples.
# rref.omh: use cref instead of xref for examples.
# mref.omh: use cref instead of xref for examples.
# cref.omh: minor change to title.
add_list="
	omh/deprecated.omh
"
change_list="
	CvsCommit
	omh/whatsnew.omh
	CleanOMhelp
	omh/cross_childtable.omh
	omh/fend.omh
	omh/format_children.omh
	omh/getstarted.omh
	omh/other.omh
	omh/special.omh
	omh/whatsnew03.omh
	omh/getstarted/ImageExample.omh
	omh/tref.omh
	omh/href.omh
	omh/rref.omh
	omh/mref.omh
	omh/cref.omh
"
delete_list="
	omh/getstarted/FrameExample.omh
	omh/getstarted/StartFrame.omh
"
#----------------------------------------------------------------------
# Edit section above for individual cases, section below stays the same
#----------------------------------------------------------------------
sed -e '/^[^#]/d' -e 's/^[#] *//' < CvsCommit > CvsCommit.log
count=0
for file in $add_list $change_list
do
	count=`expr $count + 1`
	ext=`echo $file | sed -e "s/.*\././"`
	if [ $file != "CvsCommit"      ] && \
	   [ $file != "CvsCommit.sed"  ] && \
	   [ $ext != ".vcproj"         ] && \
	   [ $ext != ".vim"            ]
	then
		# automatic edits and backups
		echo "cp $file junk.$count"
		cp $file junk.$count
		sed -f CvsCommit.sed < junk.$count > $file
		diff junk.$count $file
	fi
done
for file in $add_list
do
	echo "cvs add $file ?"
done
for file in $delete_list
do
	echo "cvs delete $file ?"
done
response=""
while [ "$response" != "c" ] && [ "$response" != "a" ]
do
	read -p "continue [c] or abort [a] ? " response
done
if [ "$response" = "c" ]
then
	for file in $delete_list
	do
		cvs delete $file
	done
	for file in $add_list
	do
		cvs add $file
	done
	cvs commit -F CvsCommit.log $add_list $change_list $delete_list
else
	count=0
	for file in $add_list $change_list
	do
		count=`expr $count + 1`
		ext=`echo $file | sed -e "s/.*\././"`
		if [ $file != "CvsCommit"      ] && \
	   	[ $file != "CvsCommit.sed"  ] && \
	   	[ $ext != ".vcproj"         ] && \
	   	[ $ext != ".vim"            ]
		then
			# undo the automatic edits
			echo "mv junk.$count $file"
			mv junk.$count $file
		fi
	done
fi
