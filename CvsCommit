# Change $newlinech so that it only ignores the first space after (not tab). 
#
# Build: reference FixAclocal for fixing warnings during aclocal.
# Makefile.am: add FixAclocal to the distribution.
# FixAclocal: shell script to fix Aclocal (copied from CppAD).
# newlinech.omh: document and test change to newlinech command.
# whatsnew.omh: users view of the changes 
# omhelp.y: implementaiton of change to newlinech command.
sed -e '/^[^#]/d' -e 's/^[#] *//' < CvsCommit > CvsCommit.log
list="\
	Build \
	CvsCommit \
	Makefile.am \
	FixAclocal \
	omh/newlinech.omh \
	omh/whatsnew.omh \
	src/omhelp.y \
"
count=0
for file in $list
do
	count=`expr $count + 1`
	ext=`echo $file | sed -e "s/.*\././"`
	if [ $file != "CvsCommit"      ] && \
	   [ $file != "CvsCommit.sed"  ] && \
	   [ $ext != ".vcproj"         ]
	   [ $ext != ".vim"            ]
	then
		echo "cp $file junk.$count"
		cp $file junk.$count
		sed -f CvsCommit.sed < junk.$count > $file
		diff junk.$count $file
	fi
done
cvs add FixAclocal
cvs commit -F CvsCommit.log $list
