# Add vim syntax highlighting
#
# CvsCommit: add batch editing at commit time.
# CvsCommit.sed: batch editing script file.
# Build: add optional vim configure argument and fix an error message.
# Makefile.am: add omhelp.vim to list of installed files.
# configure.ac: add vim configure arugment.
# omhelp.vim: vim syntax hightlighting file.
# InstallWindows.omh: change RunOMhelp to ./RunOMhelp.
# installunix.omh: add vim configure arugment.
sed -e '/^[^#]/d' -e 's/^[#] *//' < CvsCommit > CvsCommit.log
list="\
	Build \
	Makefile.am \
	configure.ac \
	omh/InstallWindows.omh \
	omh/installunix.omh \
	omh/whatsnew.omh\
"
for file in $list
do
	sed -f CvsCommit.sed < $file > junk
	echo $file
	diff $file junk
	mv   $file ~/trash
	mv   junk  $file
done
# cvs add OMhelp/omhelp.vim
cvs add CvsCommit.sed
cvs commit -F CvsCommit.log     \
	CvsCommit               \
	CvsCommit.sed           \
	OMhelp/omhelp.vim       \
	$list
