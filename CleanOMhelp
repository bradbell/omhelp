if [ "$1" = "-remove" ]
then
	rm -r -f `find .               \
	\( -name 'aclocal.m4'     \) -or \
	\( -name 'autom4te.cache' \) -or \
	\( -name 'configure'      \) -or \
	\( -name 'config.h'       \) -or \
	\( -name 'config.h.in'    \) -or \
	\( -name 'config.status'  \) -or \
        \( -name 'Debug'          \) -or \
        \( -name '.deps'          \) -or \
	\( -name 'Developer'      \) -or \
	\( -name 'dictionary.bin' \) -or \
	\( -name 'Doc'            \) -or \
	\( -name 'junk'           \) -or \
	\( -name 'junk?'          \) -or \
	\( -name 'junk.*'         \) -or \
	\( -name 'latex.c'        \) -or \
	\( -name 'latex.h'        \) -or \
	\( -name 'Makefile'       \) -or \
	\( -name 'Makefile.in'    \) -or \
	\( -name 'main.c'         \) -or \
	\( -name 'omhelp-*'       \) -or \
	\( -name 'omhelp.c'       \) -or \
	\( -name 'omhelp.h'       \) -or \
        \( -name 'Release'        \) -or \
        \( -name 'stamp-h1'       \) -or \
	\( -name 'temp'           \) -or \
	\( -name 'temp?'          \) -or \
	\( -name 'temp.*'         \) -or \
	\( -name '*.a'            \) -or \
	\( -name '*.exe'          \) -or \
	\( -name '*.gz'           \) -or \
	\( -name '*.ilk'          \) -or \
	\( -name '*.log'          \) -or \
	\( -name '*.ncb'          \) -or \
	\( -name '*.new'          \) -or \
	\( -name '*.o'            \) -or \
	\( -name '*.obj'          \) -or \
	\( -name '*.old'          \) -or \
	\( -name '*.out'          \) -or \
	\( -name '*.stackdump'    \) -or \
	\( -name '*.suo'          \) -or \
	\( -name '.*.swp'         \) -or \
	\( -name '*.tmp'          \) -or \
	\( -name '*.zip'          \)`
else
	find .                         \
	\( -name 'aclocal.m4'     \) -or \
	\( -name 'autom4te.cache' \) -or \
	\( -name 'configure'      \) -or \
	\( -name 'config.h'       \) -or \
	\( -name 'config.h.in'    \) -or \
	\( -name 'config.status'  \) -or \
        \( -name 'Debug'          \) -or \
        \( -name '.deps'          \) -or \
	\( -name 'Developer'      \) -or \
	\( -name 'dictionary.bin' \) -or \
	\( -name 'Doc'            \) -or \
	\( -name 'junk'           \) -or \
	\( -name 'junk?'          \) -or \
	\( -name 'junk.*'         \) -or \
	\( -name 'latex.c'        \) -or \
	\( -name 'latex.h'        \) -or \
	\( -name 'Makefile'       \) -or \
	\( -name 'Makefile.in'    \) -or \
	\( -name 'main.c'         \) -or \
	\( -name 'omhelp-*'       \) -or \
	\( -name 'omhelp.c'       \) -or \
	\( -name 'omhelp.h'       \) -or \
        \( -name 'Release'        \) -or \
        \( -name 'stamp-h1'       \) -or \
	\( -name 'temp'           \) -or \
	\( -name 'temp?'          \) -or \
	\( -name 'temp.*'         \) -or \
	\( -name '*.a'            \) -or \
	\( -name '*.exe'          \) -or \
	\( -name '*.gz'           \) -or \
	\( -name '*.ilk'          \) -or \
	\( -name '*.log'          \) -or \
	\( -name '*.ncb'          \) -or \
	\( -name '*.new'          \) -or \
	\( -name '*.o'            \) -or \
	\( -name '*.obj'          \) -or \
	\( -name '*.obj'          \) -or \
	\( -name '*.old'          \) -or \
	\( -name '*.stackdump'    \) -or \
	\( -name '*.suo'          \) -or \
	\( -name '.*.swp'         \) -or \
	\( -name '*.tmp'          \) -or \
	\( -name '*.zip'          \)
	echo "To remove files listed above use: CleanCppAD -remove"
fi
